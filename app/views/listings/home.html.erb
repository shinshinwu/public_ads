<a name="about"></a>
<div class="intro-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="intro-message">
          <div id="intro-box">
            <div class="split-pannels">
              <div class="row">
                <div class="col-xs-6">
                  <a href="#" id="request-button">Request</a>
                </div>
                <div class="col-xs-6">
                  <a href="#" id="listing-button">Listing</a>
                </div>
              </div>

              <div class="row">
                <section id="request-section" class="col-xs-12">
                  <p>a public<span class="orange">ad</span> space by</p>
                  <ul>
                    <%= link_to "See all ad space listings near my current location", listings_path, class: "btn btn-warning btn-lg" %>
                  </ul>
                </section>

                <section id="listing-section" class="col-xs-12">
                  <p>Start listing your public <span class="orange">ad</span> space for free by creating an account today</p>
                  <%= form_for @user, url: users_path, method: :post, html: {class: "signup-form form"} do |f| %>
                    <%= f.label :email %>
                    <%= f.email_field :email, required: true %>

                    <%= f.label :password %>
                    <%= f.password_field :password, required: true %>

                    <%= f.submit "join", :class => 'btn btn-warning btn-lg' %>
                  <% end %>
                </section>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
    <!-- /.container -->

</div>
<!-- /.intro-header -->

<!-- Page Content -->
