<% content_for :javascripts do %>
<script type="text/javascript">
  $(function() {
    $("#request-button").hover(function(){
      $("#request-section").show();
      $("#listing-section").hide();
    });

    $("#listing-button").hover(function(){
      $("#listing-section").show();
      $("#request-section").hide();
    });
  });
</script>
<% end %>