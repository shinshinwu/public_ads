<div class="intro-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
           <div class="ad-tabs">
        <input class="state" type="radio" title="tab-one" name="tabs-state" id="tab-one" checked />
        <input class="state" type="radio" title="tab-two" name="tabs-state" id="tab-two" />
        <!-- <input class="state" type="radio" title="tab-three" name="tabs-state" id="tab-three" /> -->
        <div class="tabs flex-tabs">
          <label for="tab-one" id="tab-one-label" class="tab">Search</label>
          <label for="tab-two" id="tab-two-label" class="tab">List</label>
          <!-- <label for="tab-three" id="tab-three-label" class="tab">Request</label> -->
          <div id="tab-one-panel" class="panel active">
                              <div class="row">
                    <div id="request-section" class="col-xs-12">
                      <h1 class="text-center v-p-t b-t f-w-400">Find your future public<span class="orange">ad</span> space</h1>
                      <!-- <h2 class="text-center visible-xs" style="color:black;">The only public<span class="orange">ad</span> space marketplace</h2> -->
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-xs-12">
                    <%=form_tag("/listings", method: "get", search: true, class: "nifty_form") do%>
                    <div class="row">
                      <div class="col-sm-6 col-md-4 c-p-b">
                      <p class='vp-s-t '>search by publicad type</p>
                      <%=select_tag "category", "<option selected='selected' >All</option></span><option>Billboard</option><option>Bench Ad</option><option>Bus Stop Ad</option>".html_safe, id: "dropdown"%>
                      </div>
                      <div class="col-sm-6 col-md-4 c-p-b">
                      <p class="vp-s-t">search in this location</p>
                        <%= text_field_tag(:address, nil, :required => true, placeholder: 'Zip code or Address') %>

                      </div>
                      <div class="col-sm-12 col-md-4 c-p-b vp-s-c">
                       <p class="vp-s-t">proximity from location</p>
                        <div id="nonlinear"></div>
                        <span class="example-val" id="distance-value"></span>
                      </div>
                      <div class="col-sm-12" style="clear:both;">
                      <%= hidden_field_tag('distance', 'valuye')%> 
                      <%= submit_tag("Find PublicAdSpace", class: 'btn btn-warning btn-lg hm-button', id: 'distance_slider') %>
                      </div>
                    </div>
                    <%end%>
                    </div>
                  </div>
          </div>
          <div id="tab-two-panel" class="panel ">
            <div class="row toggleable" id='signInDiv'>
              <div id="listing-section" class="col-xs-12">
                <h2 class="text-center hidden-xs b-t">List your public<span class="orange">ad</span> space<br />by creating your  <span class="orange">free</span>  account today</h2>
                <h3 class="text-center visible-xs" style="color:black;">Start listing your public<span class="orange">ad</span> space for <span class="orange">free</span> by creating an account today</h3>
              </div> <!-- listing section -->
              <div class="col-xs-12">
        <%= form_for(:session, url: {controller: "sessions", action: "create"}, html: {class: "form-inline", id: "login-nav"}) do |f| %>
          <div class="form-group">
             <label class="sr-only" >Email address</label>
           <%= f.email_field :email, required: true, class: "form-control", placeholder: "Email" %>
          </div>
          <div class="form-group">
             <label class="sr-only" >Password</label>
             <%= f.password_field :password, required: true, class: "form-control", placeholder: "Password" %>
          </div>
          <div class="form-group">
            <%= f.submit "Log In", :class => 'btn btn-warning btn-block' %>
          </div>
       <% end %>
              </div>
            </div> <!-- row -->
            <div class="row toggleable" id='signUpDiv'>
              <div id="listing-section" class="col-xs-12">
                <h2 class="text-center hidden-xs b-t">List your public<span class="orange">ad</span> space<br />by creating your  <span class="orange">free</span>  account today</h2>
                <h3 class="text-center visible-xs" style="color:black;">Start listing your public<span class="orange">ad</span> space for <span class="orange">free</span> by creating an account today</h3>

              </div> <!-- listing section -->
              <div class="col-xs-12">
        <%= form_for @user, html: {class: "form-inline", id: "sign-up-nav"} do |f| %>
          <div class="form-group">
             <label class="sr-only">Email address</label>
           <%= f.email_field :email, required: true, class: "form-control", placeholder: "Email" %>
          </div>
          <div class="form-group">
             <label class="sr-only">Password</label>
             <%= f.password_field :password, required: true, class: "form-control", placeholder: "Password" %>
          </div>
          <div class="form-group">
        <%= f.submit "Create Account", :class => 'btn btn-warning btn-block' %>
          </div>
       <% end %>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12">
                <a id= 'joinLink'> Don't Have an account, sign up for free today!</a>
              </div>
            </div>
          </div>


<!--           <div id="tab-three-panel" class="panel">
<p>some stuff</p>
          </div> -->
        </div>
      </div>
        </div>
      </div>
    </div>
  </div>
