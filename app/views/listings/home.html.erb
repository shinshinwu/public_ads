<a name="about"></a>
<div class="intro-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="intro-message">
          <div id="intro-box">
            <div class="split-pannels">
              <ul class="nav nav-tabs" id="myTab">
                <li class="active" id="request-tab"><a href="#request" data-toggle="tab">Request</a></li>
                <li id="listing-tab"><a href="#listing" data-toggle="tab">Listing</a></li>
              </ul>

              <div class="tab-content">
                <div class="tab-pane active" id="request">
                  <div class="row">
                    <div id="request-section" class="col-xs-12">
                      <h1 class="text-center">Request a public<span class="orange">ad</span> space by</h1>
                      <ul>
                        <%= link_to "Search all ad space listings near my current location", listings_path, class: "btn btn-warning btn-lg", data: { no_turbolink: true } %>
                      </ul>
                    </div>
                  </div>
                </div> <!-- request tab-pane -->

                <div class="tab-pane" id="listing">
                  <div class="row">
                    <div id="listing-section" class="col-xs-12">
                      <h2 class="text-center">Start listing your public<span class="orange">ad</span> space for <span class="orange">free</span> <br />by creating an account today</h2>
                      <%= form_for @user, url: users_path, method: :post, html: {class: "signup-form form form-inline"} do |f| %>
                        <div class="form-group">
                          <%= f.label :email %>
                          <%= f.email_field :email, required: true, class: "form-control" %>
                        </div>

                        <div class="form-group">
                          <%= f.label :password %>
                          <%= f.password_field :password, required: true, class: "form-control" %>
                        </div>
                        <div class="form-group">
                          <%= f.submit "join", :class => 'btn btn-warning' %>
                        </div>
                      <% end %>
                    </div> <!-- listing section -->
                  </div> <!-- row -->
                </div> <!-- listing tab-pane -->

              </div> <!-- tab-content -->

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
    <!-- /.container -->

</div>
<!-- /.intro-header -->

