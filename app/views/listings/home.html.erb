<a name="about"></a>
<div class="intro-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="intro-message">
          <div id="intro-box">
            <div class="split-pannels">
              <ul class="nav nav-tabs" id="myTab">
                <li class="active" id="request-tab" style="width:50%;"><a href="#request" data-toggle="tab">Request</a></li>
                <li id="listing-tab" style="width:50%;"><a href="#listing" data-toggle="tab">Listing</a></li>
              </ul>

              <div class="tab-content">
                <div class="tab-pane active" id="request">
                  <div class="row">
                    <div id="request-section" class="col-xs-12">
                      <h1 class="text-center hidden-xs">Request a public<span class="orange">ad</span> space by</h1>
                      <h2 class="text-center visible-xs" style="color:black;">Request a public<span class="orange">ad</span> space by</h2>
                      <div class="visible-xs">
                        <%= link_to "Search All Ad Space Listings<br />Near My Current Location".html_safe, listings_path, class: "btn btn-warning", data: { no_turbolink: true } %>
                      </div>
                      <div class="hidden-xs">
                        <%= link_to "Search All Ad Space Listings Near My Current Location".html_safe, listings_path, class: "btn btn-warning btn-lg", data: { no_turbolink: true } %>
                      </div>
                    </div>
                  </div>
                </div> <!-- request tab-pane -->

                <div class="tab-pane" id="listing">
                  <div class="row">
                    <div id="listing-section" class="col-xs-12">
                      <h2 class="text-center hidden-xs">Start listing your public<span class="orange">ad</span> space for <span class="orange">free</span> <br />by creating an account today</h2>
                      <h3 class="text-center visible-xs" style="color:black;">Start listing your public<span class="orange">ad</span> space for <span class="orange">free</span> by creating an account today</h3>
                      <%= form_for @user, url: users_path, method: :post, html: {class: "signup-form form form-inline"} do |f| %>
                        <div class="form-group">
                          <%= f.label :email %>
                          <%= f.email_field :email, required: true, class: "form-control" %>
                        </div>

                        <div class="form-group">
                          <%= f.label :password %>
                          <%= f.password_field :password, required: true, class: "form-control" %>
                        </div>
                        <div class="form-group">
                          <%= f.submit "join", :class => 'btn btn-warning' %>
                        </div>
                      <% end %>
                    </div> <!-- listing section -->
                  </div> <!-- row -->
                </div> <!-- listing tab-pane -->

              </div> <!-- tab-content -->

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
    <!-- /.container -->

</div>
<!-- /.intro-header -->

<!-- Page Content -->
