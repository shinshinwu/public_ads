<!DOCTYPE html>
<html>
<head>
  <title>PublicAds</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>
    <ul>
      <li>
        <%= link_to "Home", root_path %>
      </li>
      <% unless logged_in? -%>
        <li>
          <%= link_to "Sign Up", signup_users_path %>
        </li>
        <li>
          <%= link_to "Login", login_users_path %>
        </li>
      <% else -%>
        <li>
          <%= link_to "Profile", profile_users_path %>
        </li>
        <li>
          <%= link_to "Create Listing", new_listing_path %>
        </li>
        <li>
          <%= link_to "Logout", logout_users_path, method: "delete" %>
        </li>
      <% end %>
    </ul>
  </header>


  <div class="content">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>

    <%= yield %>
  </div>

  <%= yield :javascripts %>

</body>
</html>
