<%= form_for @user, html: {class: "form"} do |f| %>
  <fieldset>

  <legend>Sign Up</legend>

  <%= f.label :email %>
  <%= f.email_field :email, required: true %>

  <%= f.label :password %>
  <%= f.password_field :password, required: true %>

  <%= f.submit "Create my account", :class => 'pure-button' %>
  </fieldset>
<% end %>